doctype html
html(lang="ru" prefix="og: http://ogp.me/ns#")
	head
		meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
		meta(http-equiv="X-UA-Compatible" content="IE=EmulateIE9")
		meta(charset="utf-8")
		base(href="https://" + repo + "/")
		link(rel="shortcut icon" type="image/x-icon" href="https://" + repo + "/favicon.ico")
		link(rel="icon" type="image/png" href="https://" + repo + "/favicon.png")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		meta(name="SKYPE_TOOLBAR" content="SKYPE_TOOLBAR_PARSER_COMPATIBLE")
		link(type="text/css" rel="stylesheet" href="https://" + repo + "/css/main.css?hash=" + hash)
	body
		header
			.wrapper
				.github-icons
					a(href="https://github.com/" + userName + "/")
						img(src="https://" + repo + "/favicon.png" alt="ProjectSoft GitHub")
		main
			.wrapper
				h1
					|ProjectSoft GitHub Pages
				.news
					.news-container
						include inc/radio_light.pug
		footer
			.wrapper
				span.copyright
					|Copyright &copy; 2008 - all right reserved
				span.developer
					|Developed by:  
					a(href="https://github.com/" + userRepo + "/" target="_blank")
						|ProjectSoft
		script(src="https://" + repo + "/js/plugins.js?hash=" + hash type="text/javascript")
		script(src="https://" + repo + "/js/main.js?hash=" + hash type="text/javascript")